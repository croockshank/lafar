<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Lafar.Light" parent="Theme.Lafar" />

    <!-- Base application theme. -->
    <style name="Theme.Lafar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/lafar_blue_500</item>
        <item name="colorPrimaryVariant">@color/lafar_blue_800</item>
        <item name="colorSecondary">@color/lafar_red_400</item>
        <item name="colorSecondaryVariant">@color/lafar_red_800</item>

        <item name="android:colorBackground">@color/lafar_white_100</item>
        <item name="colorSurface">@color/lafar_white_200</item>
        <item name="colorError">@color/lafar_red_300</item>

        <item name="colorOnPrimary">@color/lafar_white_50</item>
        <item name="colorOnSecondary">@color/lafar_white_50</item>
        <item name="colorOnBackground">@color/lafar_black_800</item>
        <item name="colorOnSurface">@color/lafar_black_800</item>
        <item name="colorOnError">@color/lafar_white_50</item>

        <item name="scrimBackground">@color/lafar_black_800</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/lafar_white_200</item>

        <!--        Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Lafar.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Lafar.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Lafar.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Lafar.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Lafar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Lafar.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Lafar.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Lafar.Caption</item>

        <item name="emphasisHighAlpha">1</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <!--        Styles-->
        <item name="elevation">@dimen/plane_all</item>

        <item name="bottomAppBarStyle">@style/Widget.Lafar.BottomAppBar.PrimarySurface</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="floatingActionButtonStyle">@style/Widget.Lafar.FloatingActionButton</item>

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearence.Lafar.LargeComponent
        </item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearence.Lafar.SmallComponent
        </item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>