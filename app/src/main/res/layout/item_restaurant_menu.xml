<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.genadidharma.lafar.util.TextUtil" />

        <variable
            name="menu"
            type="com.genadidharma.lafar.data.Menu" />

        <variable
            name="listener"
            type="com.genadidharma.lafar.ui.restaurant.sections.RestaurantMenuAdapter.RestaurantMenuAdapterListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(view) -> listener.onMenuClicked(view, menu)}"
        android:transitionName="@{@string/menu_to_detail_transition_name(menu.id)}"
        app:cardBackgroundColor="@color/lafar_white_50"
        app:cardCornerRadius="@dimen/lafar_lg_component_corner_radius"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="@dimen/lafar_sm_component_corner_radius"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title">

                <ImageView
                    android:id="@+id/iv_menu"
                    glideCenterCrop="@{true}"
                    glideSrc="@{menu.images[0]}"
                    android:layout_width="@dimen/image_card_restaurant_size"
                    android:layout_height="@dimen/image_card_restaurant_size"
                    android:contentDescription="@{menu.name}"
                    android:scaleType="centerCrop"
                    tools:layout_editor_absoluteX="16dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:text="@{menu.name}"
                android:textAppearance="@style/TextAppearance.Lafar.Subtitle1.Bold"
                app:layout_constraintEnd_toStartOf="@+id/i_favorite"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="@{menu.desc}"
                android:textAppearance="@style/TextAppearance.Lafar.Caption.Light"
                android:textColor="@color/color_on_surface_emphasis_disabled"
                app:layout_constraintEnd_toEndOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:text="@{TextUtil.formatRupiah(menu.price, false)}"
                android:textAppearance="@style/TextAppearance.Lafar.Subtitle1.Bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_desc"
                app:layout_constraintStart_toStartOf="@+id/tv_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

            <ImageButton
                android:id="@+id/i_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle"
                android:padding="@dimen/sm_margin_padding"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>