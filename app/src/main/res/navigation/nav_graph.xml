<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.genadidharma.lafar.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_restaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.genadidharma.lafar.ui.discover.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" >
        <action
            android:id="@+id/action_discoverFragment_to_restaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantFragment"
        android:name="com.genadidharma.lafar.ui.restaurant.RestaurantFragment"
        android:label="fragment_restaurant"
        tools:layout="@layout/fragment_restaurant" >

        <argument
            android:name="restaurant"
            app:argType="com.genadidharma.lafar.data.Restaurant" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.genadidharma.lafar.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:launchSingleTop="true"
        app:popUpToInclusive="true"
        app:popUpTo="@id/nav_graph" />
    <action
        android:id="@+id/action_global_discoverFragment"
        app:destination="@id/discoverFragment" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <fragment
        android:id="@+id/menuDetailFragment"
        android:name="com.genadidharma.lafar.ui.restaurant.sections.menu.MenuDetailFragment"
        android:label="fragment_menu_detail"
        tools:layout="@layout/fragment_menu_detail" >
        <argument
            android:name="menu"
            app:argType="com.genadidharma.lafar.data.Menu" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.genadidharma.lafar.ui.restaurant.sections.menu.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment_to_menuDetailFragment"
            app:destination="@id/menuDetailFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_menuFragment"
        app:destination="@id/menuFragment" />
</navigation>